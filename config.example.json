{
    "_comment": "J.A.R.V.I.S. Configuration — Copy to config.json and edit values",

    "mic_device": 1,
    "audio_gain": 10.0,
    "silence_limit": 1.0,
    "wake_sensitivity": 0.3,

    "whisper_model": "base.en",
    "whisper_device": "cpu",

    "ollama_model": "llama3.1:8b",
    "ollama_url": "http://127.0.0.1:11434",
    "max_context_messages": 20,

    "piper_voice": "en_GB-alan-medium",

    "memory_auto_extract": true,

    "anthropic_api_key": "",
    "claude_model": "claude-sonnet-4-5-20250929",
    "claude_max_tokens": 4096,

    "router": {
        "enabled": true,
        "complex_word_threshold": 80,
        "simple_word_threshold": 15
    },

    "claude_budget": {
        "daily_usd": 5.00,
        "monthly_usd": 50.00,
        "warn_threshold": 0.80
    },

    "rate_limits": {
        "voice": 5,
        "text": 15,
        "telegram": 10
    },

    "tool_timeouts": {
        "pi.*": 60,
        "claude.*": 120,
        "vision.*": 45
    },

    "resilience": {
        "pi_health_check_interval": 60
    },

    "personaplex": {
        "enabled": false,
        "host": "localhost",
        "port": 8998,
        "ssl": true,
        "ssl_cert_path": "",
        "bridge_port": 8999,
        "voice": "NATM0.pt",
        "persona": "You are JARVIS, a highly capable AI assistant inspired by Iron Man's AI butler. You speak with a calm, measured British tone. You are knowledgeable, witty, and efficient. Address the user as 'sir'. Keep responses concise — 1 to 3 sentences unless asked for detail. You have access to tools for weather, notes, calendar, file management, Raspberry Pi control, and memory. When the user asks you to do something that requires a tool, acknowledge the request naturally — your backend system will handle the execution. Don't make up data you don't have."
    },

    "telegram": {
        "bot_token": "",
        "api_id": 0,
        "api_hash": "",
        "allowed_user_ids": [],
        "notify_on_start": true
    },

    "pi": {
        "host": "",
        "user": "pi",
        "ssh_key": "~/.ssh/jarvis_pi",
        "ssh_port": 22,
        "transport": "ssh",
        "gateway_port": 18790,
        "tunnel_local_port": 18790,
        "dispatcher_path": "~/jarvis-pi/dispatcher.py",
        "max_retries": 2,
        "connect_timeout": 5
    }
}
